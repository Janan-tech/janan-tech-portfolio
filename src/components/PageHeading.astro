---
import { LeftAngleIcon, RightAngleIcon} from "../components/svgs/index.ts";

interface Props {
  heading: string;
  subHeading: string;
}

const { heading, subHeading } = Astro.props;
---

<div>
  <p class="flex gap-5 mb-3 justify-center font-normal text-slate-60">
    <Fragment set:html={LeftAngleIcon} />
    <span class="text-gray">{subHeading}</span>
    <Fragment set:html={RightAngleIcon} />
  </p>
  <h3 class="text-center font-bold text-4xl">{heading}</h3>
</div>

