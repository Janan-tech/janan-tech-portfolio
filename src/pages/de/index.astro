      <Link className="absolute left-[10%] top-[30%] lg:top-[40%]" href="/services">
        <Fragment set:html={ServicesPlanet} />
      </Link>
    </section>
    <section class="w-[50%] mx-auto absolute center-elipse ">
      <svg width="100%"  viewBox="0 0 1009 403" fill="none" xmlns="http://www.w3.org/2000/svg">
